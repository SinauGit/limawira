<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.purchase.discount.total</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="inside">
                <group>
                    <h2>Aktifkan validasi ganda untuk diskon PO</h2>
                    <field name="po_order_approval"/>
                    <field name="po_double_validation" widget="radio"/>
                    <field name="po_double_validation_limit" attrs="{'invisible': [('po_double_validation', '!=', 'two_step')]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
