<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit popup Schedule Activity (wizard mail.activity.schedule) -->
    <record id="lww_mail_activity_schedule_form_inherit_multi" model="ir.ui.view">
        <field name="name">mail.activity.schedule.form.multi.assignees.lww</field>
        <field name="model">mail.activity.schedule</field>
        <!-- id view standar Odoo 17/18; jika berbeda di instance, ganti ref berikut -->
        <field name="inherit_id" ref="mail.mail_activity_schedule_view_form"/>
        <field name="arch" type="xml">
            <!-- Gantikan field single assignee ke M2M tags; kompatibel untuk activity_user_id -->
            <xpath expr="//field[@name='activity_user_id']" position="replace">
                <field name="multi_user_ids"
                       widget="many2many_tags"
                       string="Assigned to"
                       options="{'no_create': True, 'no_quick_create': True}"
                       help="Pilih satu atau lebih pengguna. Sistem akan membuat satu aktivitas per pengguna."/>
            </xpath>
        </field>
    </record>
</odoo>
