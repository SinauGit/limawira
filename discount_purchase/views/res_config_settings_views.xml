<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_purchase_discount" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.purchase.discount</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='purchase_setting_container']" position="inside">
                <setting id="purchase_discount_product" string="Discount Product" help="Product used for applying discounts in purchase orders">
                    <div class="content-group">
                        <div class="row mt16">
                            <label for="purchase_discount_product_id" class="col-lg-4 o_light_label"/>
                            <field name="purchase_discount_product_id"/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo> 