<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================================ -->
    <!-- File: wizard/stock_valuation_layer_revaluation_views.xml -->
    <!-- ================================ -->
    
    <!-- Inherit wizard form view -->
    <record id="stock_valuation_layer_revaluation_form_inherit" model="ir.ui.view">
        <field name="name">stock.valuation.layer.revaluation.form.inherit</field>
        <field name="model">stock.valuation.layer.revaluation</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_revaluation_form_view"/>
        <field name="arch" type="xml">
            <!-- Add revaluation mode after product_id field -->
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="revaluation_mode" widget="radio" readonly="1"/>
            </xpath>
            
            <!-- Add selected layers section after the current value group -->
            <xpath expr="//group[1]" position="after">
                <group attrs="{'invisible': [('revaluation_mode', '!=', 'partial')]}">
                    <field name="selected_layer_ids" nolabel="1" colspan="2">
                        <tree editable="bottom">
                            <field name="reference" readonly="1"/>
                            <field name="product_id" readonly="1" optional="hide"/>
                            <field name="lot_id" readonly="1" optional="show"/>
                            <field name="original_qty" readonly="1" string="Available Qty"/>
                            <field name="selected_qty" string="Qty to Revalue" 
                                   attrs="{'readonly': [('selected_qty', '&lt;=', 0)]}"/>
                            <field name="value_per_unit" readonly="1" string="Value/Unit"/>
                            <field name="selected_value" readonly="1" string="Selected Value"/>
                        </tree>
                    </field>
                </group>
            </xpath>
            
            <!-- Add info box for partial revaluation -->
            <xpath expr="//group[last()]" position="after">
                <div class="alert alert-info" role="alert" attrs="{'invisible': [('revaluation_mode', '!=', 'partial')]}">
                    <strong>Partial Revaluation Mode:</strong><br/>
                    Only the selected quantities from the layers above will be revalued. 
                    You can adjust the "Qty to Revalue" for each layer as needed.
                </div>
            </xpath>
        </field>
    </record>

    <!-- ================================ -->
    <!-- File: views/stock_valuation_layer_views.xml -->
    <!-- ================================ -->
    
    <!-- Inherit existing action for partial revaluation -->
    <record id="action_revalue_layers_inherit" model="ir.actions.act_window">
        <field name="name">Adjust Valuation (Custom)</field>
        <field name="res_model">stock.valuation.layer.revaluation</field>
        <field name="view_mode">form</field>
        <field name="binding_model_id" ref="stock_account.model_stock_valuation_layer"/>
        <field name="binding_view_types">list</field>
        <field name="target">new</field>
        <field name="context">{'revaluation_mode': 'partial'}</field>
    </record>

    <!-- Action for partial revaluation dari menu -->
    <record id="action_partial_stock_valuation_layer_revaluation" model="ir.actions.act_window">
        <field name="name">Partial Stock Valuation Revaluation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.valuation.layer.revaluation</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'revaluation_mode': 'partial'}</field>
    </record>

    <!-- Menu item untuk partial revaluation -->
    <record id="menu_partial_stock_valuation_revaluation" model="ir.ui.menu">
        <field name="name">Partial Stock Revaluation</field>
        <field name="parent_id" ref="stock.menu_stock_inventory_valuation"/>
        <field name="action" ref="action_partial_stock_valuation_layer_revaluation"/>
        <field name="sequence">25</field>
    </record>

</odoo>