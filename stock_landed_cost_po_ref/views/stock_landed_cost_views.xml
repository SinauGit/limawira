<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_stock_landed_cost_form_inherit_vendor_bill_total" model="ir.ui.view">
      <field name="name">stock.landed.cost.form.inherit.vendor.bill.total</field>
      <field name="model">stock.landed.cost</field>
      <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='vendor_bill_id']" position="after">
          <field name="vendor_bill_amount_total" readonly="1"/>
        </xpath>
      </field>
    </record>
  
  <record id="view_landed_cost_form_inherit_po_ref" model="ir.ui.view">
    <field name="name">stock.landed.cost.form.inherit.po.ref</field>
    <field name="model">stock.landed.cost</field>
    <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_form"/>
    <field name="arch" type="xml">
      <!-- Taruh persis di atas field Transfers -->
      <xpath expr="//field[@name='picking_ids']" position="before">
        <field name="purchase_order_id" readonly="1"/>
      </xpath>
    </field>
  </record>

  <record id="view_stock_landed_cost_form_inherit_receipt_only" model="ir.ui.view">
    <field name="name">stock.landed.cost.form.inherit.receipt.only</field>
    <field name="model">stock.landed.cost</field>
    <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='picking_ids']" position="attributes">
        <attribute name="domain">[
            ('company_id', '=', company_id),
            ('picking_type_id.code', '=', 'incoming'),
            ('move_ids.stock_valuation_layer_ids', '!=', False)
        ]</attribute>
        <!-- aktifkan otomatis group by Origin di popup Search More -->
        <attribute name="context">{'search_default_groupby_origin': 1}</attribute>
      </xpath>
    </field>
  </record>

  <record id="view_picking_search_inherit_groupby_origin" model="ir.ui.view">
    <field name="name">stock.picking.search.groupby.origin</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_internal_search"/>
    <field name="arch" type="xml">
      <xpath expr="//search" position="inside">
        <filter name="groupby_origin"
                string="PO / Source Document"
                context="{'group_by': 'origin'}"/>
      </xpath>
    </field>
  </record>

  </data>

</odoo>
