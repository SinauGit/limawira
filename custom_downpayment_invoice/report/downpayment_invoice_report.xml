<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<template id="downpayment_invoice_document" inherit_id="account.report_invoice_document" customize_show="True">
        <xpath expr="//table[@name='invoice_line_table']/tbody" position="replace">
            <tbody class="invoice_tbody">
<t t-if="o.sale_id">
    <t t-set="lines" t-value="o.sale_id.order_line.sorted(key=lambda l: (-l.sequence, l.product_id.name, -l.id), reverse=True)"/>
</t>
<t t-else="">
    <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
</t>
<t t-set="display_discount" t-value="any(l.discount for l in lines)"/>
                <t t-set="current_subtotal" t-value="0"/>
                <t t-set="current_total" t-value="0"/>
                <t t-foreach="lines" t-as="line">
                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                    <t t-set="current_total" t-value="current_total + line.price_total"/>
                    <tr t-att-class="'fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                        <t t-if="line.display_type == 'product'" name="account_invoice_line_accountable">
                            <td name="account_invoice_line_name">
                                <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}"/>
                            </td>
                            <td name="td_quantity" class="text-end text-nowrap">
                                <span t-field="line.product_uom_qty">0.00</span>
                                <span t-field="line.product_uom_id"/>
                            </td>
                            <td name="td_price_unit" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span class="text-nowrap" t-field="line.price_unit"/>
                            </td>
                            <td name="td_discount" t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span class="text-nowrap" t-options='{"widget": "float", "precision": 2}' t-field="line.discount"/>
                            </td>
                            <td name="td_subtotal" class="text-end o_price_total">
                                <span class="text-nowrap" t-field="line.price_subtotal"/>
                            </td>
                        </t>
                        <t t-elif="line.display_type == 'line_section'">
                            <td colspan="99">
                                <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}"/>
                            </td>
                            <t t-set="current_section" t-value="line"/>
                            <t t-set="current_subtotal" t-value="0"/>
                        </t>
                        <t t-elif="line.display_type == 'line_note'">
                            <td colspan="99">
                                <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}"/>
                            </td>
                        </t>
                    </tr>
                    <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                        <tr class="is-subtotal text-end">
                            <td colspan="99">
                                <strong class="mr16">Subtotal</strong>
                                <span t-out="current_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </t>
                </t>
            </tbody>
        </xpath>
    </template>

    <report
        id="downpayment_invoice_report"
        model="account.move"
        string="Downpayment Invoice"
        report_type="qweb-pdf"
        name="custom_downpayment_invoice.downpayment_invoice_report"
        file="custom_downpayment_invoice.downpayment_invoice_report"
        print_report_name="'Downpayment Invoice - %s' % (object.name)"
    />
</odoo>
