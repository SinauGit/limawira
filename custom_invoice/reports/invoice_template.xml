<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Template CSS -->
        <template id="custom_invoice_css">
            <link rel="stylesheet" type="text/scss" href="/custom_invoice/static/src/css/invoice_style.scss"/>
        </template>

        <!-- Main Invoice Template -->
        <template id="custom_report_invoice_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <t t-call="custom_invoice.custom_invoice_css"/>
                        <div class="page invoice-container">
                            <!-- Header Section with Logo and Company Info -->
                            <div class="row header-section">
                                <div class="col-6 company-info">
                                    <div class="company-logo">
                                        <span t-field="o.company_id.logo" t-options="{'widget': 'image'}"/>
                                        <p>Your logo</p>
                                    </div>
                                    <div>
                                        <p t-field="o.company_id.name"/>
                                        <p t-field="o.company_id.street"/>
                                        <p><t t-esc="o.company_id.city"/> <t t-esc="o.company_id.state_id.name"/> <t t-esc="o.company_id.zip"/></p>
                                        <p t-field="o.company_id.country_id.name"/>
                                    </div>
                                </div>
                                <div class="col-6 customer-info">
                                    <div>
                                        <p t-field="o.partner_id.name"/>
                                        <p t-field="o.partner_id.street"/>
                                        <p><t t-esc="o.partner_id.city"/> <t t-esc="o.partner_id.state_id.name"/> <t t-esc="o.partner_id.zip"/></p>
                                        <p t-field="o.partner_id.country_id.name"/>
                                        <p>Tax ID: <span t-field="o.partner_id.vat"/></p>
                                    </div>
                                </div>
                            </div>

                            <!-- Invoice Information Section -->
                            <div class="invoice-title">
                                <h2>Invoice <span t-field="o.name"/></h2>
                            </div>

                            <!-- Invoice Dates and Reference Section -->
                            <div class="row invoice-info">
                                <div class="col-3">
                                    <strong>Invoice Date</strong>
                                    <p t-field="o.invoice_date"/>
                                </div>
                                <div class="col-3">
                                    <strong>Due Date</strong>
                                    <p t-field="o.invoice_date_due"/>
                                </div>
                                <div class="col-3">
                                    <strong>Delivery Date</strong>
                                    <p t-field="o.invoice_date"/> <!-- Replace with actual delivery date field if available -->
                                </div>
                                <div class="col-1">
                                    <strong>Source</strong>
                                    <p t-field="o.invoice_origin"/>
                                </div>
                                <div class="col-2">
                                    <strong>Reference</strong>
                                    <p t-field="o.ref"/>
                                </div>
                            </div>

                            <!-- Invoice Line Items Table -->
                            <table class="table table-sm invoice-lines">
                                <thead>
                                    <tr>
                                        <th>Description</th>
                                        <th class="text-right">Quantity</th>
                                        <th class="text-right">Unit Price</th>
                                        <th class="text-right">Taxes</th>
                                        <th class="text-right">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.invoice_line_ids" t-as="line">
                                        <tr>
                                            <td>
                                                <span t-field="line.name"/>
                                                <t t-if="line.display_type == 'line_note'">
                                                    <p t-field="line.name"/>
                                                </t>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.quantity"/> <span t-field="line.product_uom_id.name"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="', '.join(map(lambda x: x.name, line.tax_ids))"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

                            <!-- Payment Terms Section -->
                            <div class="row">
                                <div class="col-6">
                                    <p><strong>Payment terms:</strong> <span t-field="o.invoice_payment_term_id.name"/></p>
                                    <p><strong>Payment Communication:</strong> <span t-field="o.name"/></p>
                                    <p>on this account: <strong t-field="o.company_id.bank_ids[0].acc_number"/></p>
                                    <p>
                                        <strong>Terms &amp; Conditions:</strong> 
                                        <a href="https://example.com/terms">https://example.com/terms</a>
                                    </p>
                                </div>
                                <div class="col-6">
                                    <table class="table table-sm">
                                        <tr>
                                            <td><strong>Untaxed Amount</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Tax <span t-field="o.amount_tax_signed"/> %</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.amount_tax" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                        <tr class="border-top">
                                            <td><strong>Total</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <!-- Footer with Contact Information -->
                            <div class="footer-info">
                                <div class="row">
                                    <div class="col-8">
                                        <span t-field="o.company_id.phone"/> <span t-field="o.company_id.email"/> <span t-field="o.company_id.website"/>
                                    </div>
                                    <div class="col-4 text-right">
                                        Page: <span class="page"/> / <span class="topage"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>