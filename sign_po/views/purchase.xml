<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<record id="customer_sign_purchase" model="ir.ui.view">
			<field name="name">customer.sign.purchase</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//page[@name='purchase_delivery_invoice']" position="after" >
                    <page string="Signature" >
                        <group>
                            <field name="signed_by"/>
                            <field name="signed_on"/>
                            <field name="signature" widget="image"/>
                        </group>
                        <group>
                            <field name="signed_by2"/>
                            <field name="signed_on2"/>
                            <field name="signature2" widget="image"/>
                        </group>
                        </page>
                </xpath>
			</field>
		</record>

        <template id="purchase_digital_sign" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//div[@id='total']" position="after">
                <div t-if="o.signature" class="mt-4 ml64 mr4" name="signature">
                    <div class="offset-8 text-center">
                        <strong>Signature</strong>
                        <img t-att-src="image_data_uri(o.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                        <p t-field="o.signed_by"/>
                        <p t-field="o.signed_on"/>
                    </div>
                </div>
            </xpath>
        </template>
        <template id="purchase_digital_sign_rfq" inherit_id="purchase.report_purchasequotation_document">
            <xpath expr="//table[hasclass('table')]" position="after">
                <div t-if="o.signature" class="mt-4 ml64 mr4" name="signature">
                    <div class="offset-8 text-center">
                        <strong>Signature</strong>
                        <img t-att-src="image_data_uri(o.signature2)" style="max-height: 4cm; max-width: 8cm;"/>
                        <p t-field="o.signed_by2"/>
                        <p t-field="o.signed_on2"/>
                    </div>
                </div>
            </xpath>
        </template>
    </data>

</odoo>