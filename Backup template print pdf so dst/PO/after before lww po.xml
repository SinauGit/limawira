<!-- AFTER Header Section -->
<div class="row" style="border-bottom: 2px solid #35bdaf; margin-bottom: 20px;">
    <div class="col-6" style="padding-top: 40px; padding-bottom: 20px;">
        <div style="font-size: 30px; text-align: left; padding-left: 0;">
            <h1 style="font-size: 2rem; margin: 0;">
                <strong>PURCHASE ORDER</strong>
            </h1>
        </div>
    </div>
    <div class="col-6" style="text-align: right;">
        <!-- Logo static di kanan atas -->
        <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % o.company_id.logo.decode()" style="max-height: 60px; margin-bottom: 5px;"/>
        <div style="font-size: 12px; line-height: 1.3; text-align: right;">
            <p style="margin: 0;">
                <span t-esc="o.company_id.street"/> <br/>
                <span t-esc="o.company_id.city"/> - <span t-esc="o.company_id.zip"/>, 
                <span t-esc="o.company_id.country_id.name"/><br/>
                Telepon: <span t-esc="o.company_id.phone"/><br/>
                Fax: <span t-esc="o.company_id.mobile"/>
            </p>
        </div>
    </div>
</div>



