<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit the invoice form view to change label "Taxes" to "Vat" -->
    <record id="view_move_form_inherit_vat_label" model="ir.ui.view">
        <field name="name">account.move.form.inherit.vat.label</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='tax_line_ids']" position="attributes">
                <attribute name="string">Vat</attribute>
            </xpath>
        </field>
    </record>
</odoo>
